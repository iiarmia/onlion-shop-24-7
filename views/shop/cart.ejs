<%- include('../includes/navigation.ejs') %>

<main>

  <ul class="cart__item-list">
    <% products.forEach(p => { %>
    <li class="cart__item">
      <div>
        <img src="<%= p.productId.imageUrl %>" class="img-thumbnail" alt="" />
      </div>
      <h1><%= p.productId.title %></h1>
      <h2><%= p.quantity %></h2>
      <form action="">
        <button class="btn btn-danger">حذف</button>
      </form>
    </li>
    <% }) %>
  </ul>

</main>

<%- include('../includes/end.ejs') %>
